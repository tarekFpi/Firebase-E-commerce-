<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="15dp"
    android:layout_margin="8dp"
    android:elevation="15dp"
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

   <LinearLayout

       android:layout_marginTop="10dp"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:padding="5dp">

       <TextView
           android:elevation="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:textColorHint="@color/colorAccent"
           android:textColor="@color/colorAccent"
           android:textAlignment="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Ladis Product Update  "
           android:textSize="23sp"
           android:textStyle="bold" />

       <TextView
           android:id="@+id/ladis_pd_Id"
           android:elevation="20dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:textColorHint="@color/colorPrimary2"
           android:textColor="@color/colorPrimary"
           android:textAlignment="center"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="10dp"
           android:text="Product ID: "
           android:textSize="20sp"
           android:textStyle="bold" />

       <com.google.android.material.textfield.TextInputLayout
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:focusableInTouchMode="true"
           android:focusable="true">

           <EditText
               android:id="@+id/edit_Update_Name_Id"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Product Name"
               android:textColor="#151514"
               android:textColorHint="#151514"
               android:textSize="18sp"
               android:textStyle="bold" />
       </com.google.android.material.textfield.TextInputLayout>


       <com.google.android.material.textfield.TextInputLayout
           android:layout_marginTop="10dp"
           android:layout_marginLeft="10dp"
           android:layout_marginRight="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:focusableInTouchMode="true"
           android:focusable="true">

           <EditText
               android:id="@+id/edit_pdate_Price"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:hint="Product price"
               android:textColor="#151514"
               android:textColorHint="#151514"
               android:textSize="18sp"
               android:textStyle="bold" />
       </com.google.android.material.textfield.TextInputLayout>


       <LinearLayout
           android:gravity="center"
           android:layout_gravity="center"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:padding="5dp">

           <info.hoang8f.widget.FButton
               android:background="@drawable/input_layout"
               android:id="@+id/ladis_update_Data"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:textSize="20dp"
               android:textStyle="bold"
               android:text="Update"
               android:layout_width="120dp"
               android:layout_height="wrap_content"/>

           <info.hoang8f.widget.FButton
               android:background="@drawable/input_layout"
               android:id="@+id/exit_btn"
               android:layout_marginLeft="8dp"
               android:layout_marginRight="8dp"
               android:textSize="20dp"
               android:textStyle="bold"
               android:text="Exit"
               android:layout_width="120dp"
               android:layout_height="wrap_content"/>
       </LinearLayout>


   </LinearLayout>

</LinearLayout>