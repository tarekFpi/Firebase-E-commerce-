<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="15dp"
    android:elevation="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".User_order_payment">
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <com.google.android.material.appbar.AppBarLayout
              android:id="@+id/appbar_id"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:theme="@style/AppTheme">
              <androidx.appcompat.widget.Toolbar
                  android:id="@+id/orderAccept_toolbar"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  app:title="Order Accept and Send Notification"
                  android:background="#5C58D8"
                  app:titleTextColor="#E4DEDE"
                  android:textAlignment="center"/>
          </com.google.android.material.appbar.AppBarLayout>

          <ScrollView
              android:layout_below="@+id/appbar_id"
              android:background="@drawable/angryim"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="5dp">
              <LinearLayout
                  android:background="@drawable/search_back"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:padding="8dp">

                  <TextView
                      android:id="@+id/final_pd_all"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:text="Item all Deatils"
                      android:textColor="#131312"
                      android:textColorHint="#151514"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/pd_userName"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/final_show_pd_all"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="20dp"
                      android:text="User Name"
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/final_pd_email"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/final_show_pd_userName"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:text="User Email"
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/final_pd_location"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/final_show_pd_email"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:text="User Location"
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/final_pd_flat"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/final_show_pd_location"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:text="Flat No"
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/final_pd_city"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/final_pd_flat"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:text="City"
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/final_pd_phon"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/final_pd_city"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:text="phon Number"
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:id="@+id/final_pd_date"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_below="@+id/final_pd_city"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:text="Order Date:"
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:textSize="18sp"
                      android:textStyle="bold" />

                  <TextView
                      android:background="@drawable/layout_back_white"
                      android:id="@+id/final_totalPrice"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="8dp"
                      android:layout_marginTop="10dp"
                      android:layout_marginRight="8dp"
                      android:padding="10dp"
                      android:text="Totlal Price"
                      android:textColor="#EEFF00"
                      android:textColorHint="#E6E6E2"
                      android:textSize="21sp"
                      android:textStyle="bold" />

                      <EditText
                          android:layout_marginLeft="8dp"
                          android:layout_marginTop="10dp"
                          android:layout_marginRight="8dp"
                          android:background="@drawable/layout_back_white"
                          android:padding="10dp"
                          android:textSize="18dp"
                          android:textStyle="bold"
                          android:textColor="#E3E3DD"
                          android:textColorHint="#E6E6E2"
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:id="@+id/edit_send_status"
                          android:hint="Subject"/>



                  <TextView
                      android:textColor="#E3E3DD"
                      android:textColorHint="#E6E6E2"
                      android:layout_marginLeft="10dp"
                      android:layout_marginRight="10dp"
                      android:padding="5dp"
                      android:background="@drawable/layout_degin"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Date:"
                      android:textStyle="bold"
                      android:textSize="18sp"
                      android:textAlignment="center"
                      android:layout_marginTop="10dp"
                      android:id="@+id/Delivary_current_Date"/>

                  <info.hoang8f.widget.FButton
                      android:onClick="delivary_save_Order"
                      android:background="@drawable/input_layout"
                      android:layout_marginLeft="8dp"
                      android:layout_marginRight="8dp"
                      android:layout_marginTop="20dp"
                      android:textSize="20dp"
                      android:textStyle="bold"
                      android:text="Save"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      />

              </LinearLayout>
          </ScrollView>
      </RelativeLayout>




</androidx.cardview.widget.CardView>