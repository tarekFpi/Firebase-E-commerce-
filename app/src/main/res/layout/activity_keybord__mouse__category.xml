<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".keybord_Mouse_Category">

    <androidx.cardview.widget.CardView
        android:layout_margin="7dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="15dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp">

        <ScrollView
            android:layout_below="@+id/appbar_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_marginEnd="12dp"
                    android:id="@+id/card_image"
                    android:layout_centerHorizontal="true"
                    app:cardElevation="20dp"
                    android:elevation="20dp"
                    app:cardCornerRadius="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="350dp">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/cate_keybord_mouse_rateImage"
                        android:layout_width="match_parent"
                        android:layout_height="350dp"
                        android:background="@drawable/search_back"
                        android:scaleType="fitXY"
                        android:src="@drawable/dress6"
                        app:iss_delay="0"
                        app:iss_period="1000"></com.denzcoskun.imageslider.ImageSlider>
                </androidx.cardview.widget.CardView>

                <RatingBar
                    android:clickable="true"
                    android:id="@+id/cate_keyMouse_rating_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_image"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="5dp"
                    android:backgroundTint="#000DFF"
                    android:progress="1"
                    android:progressTint="#D6226A"
                    android:rating="1"
                    android:scaleX=".8"
                    android:scaleY=".8"
                    android:stepSize="0.5" />

                <TextView
                    android:padding="5dp"
                    android:layout_marginRight="8dp"
                    android:id="@+id/cate_keyMouse_rating_value"
                    android:layout_alignParentRight="true"
                    android:textColor="#DDDDDA"
                    android:background="#000DFF"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/card_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.3"/>



                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/category_keymouse_Cord"
                    android:layout_below="@+id/cate_keyMouse_rating_value"
                    android:textColorHint="#191918"
                    android:textColor="#191918"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Product Cord:"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/category_keymouse_discountId"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="8dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerHorizontal="true"
                    android:layout_alignBaseline="@+id/category_keymouse_Cord"
                    android:textColorHint="#DC24A8"
                    android:textColor="#E1135B"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Discont:"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/category_keyMouse_pdName"
                    android:layout_below="@+id/category_keymouse_Cord"
                    android:textColorHint="#191918"
                    android:textColor="#191918"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Product Name:  "
                    android:textSize="16sp"
                    android:textStyle="bold" />



                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/category_keymouse_statusDecr"
                    android:layout_below="@+id/category_keyMouse_pdName"
                    android:textColorHint="#181918"
                    android:textColor="#111211"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Desription: "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_below="@+id/category_keymouse_statusDecr"
                    android:id="@+id/category_keymouse_decpt"
                    android:textColorHint="#191918"
                    android:textColor="#191918"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Product Desription"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/category_keymouse_decpt"
                    android:id="@+id/category_keymouse_Price"
                    android:textColorHint="#FF0059"
                    android:textColor="#D30F0F"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="price:"
                    android:textSize="23sp"
                    android:textStyle="bold" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_keymouse_Price"
                    app:initialNumber="1"
                    app:textSize="16sp"
                    android:id="@+id/category_keymouse_Quantity"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/category_keymouse_Quantity"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="15dp"
                    android:layout_margin="10dp"
                    android:elevation="15dp"
                    android:layout_marginTop="10dp">

                    <info.hoang8f.widget.FButton

                        android:textSize="18sp"
                        android:textColorHint="#131312"
                        android:textColor="#0B0B0A"
                        android:onClick="Add_cardData"
                        android:text="Add Cart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                 android:layout_below="@+id/category_keyMouse_pdName"
                    android:layout_alignParentRight="true"
                    android:background="#E6E6E2"
                    android:clickable="true"
                    android:onClick="go_toShowCategory"
                    android:src="@drawable/ic_cart"
                    android:layout_marginRight="6dp"
                    android:tint="#121211"
                    app:rippleColor="@color/colorPrimary" />
            </RelativeLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>