<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp"
    android:elevation="10dp"
    tools:context=".Product_Add_All">

    <RelativeLayout
        android:id="@+id/relati_Id"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/admin_level_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Admin Level"
                android:background="#5C58D8"
                app:titleTextColor="#E4DEDE"
                android:textAlignment="center"/>
        </com.google.android.material.appbar.AppBarLayout>

        <ScrollView
            android:layout_below="@+id/admin_level_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:weightSum="3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp"
                        android:elevation="15dp"
                        android:layout_width="300dp"
                        android:layout_height="300dp">
                        <com.denzcoskun.imageslider.ImageSlider
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            app:iss_auto_cycle="true"
                            android:id="@+id/admin_imageSlider"/>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/Card_femal_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="wrap_content"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:src="@drawable/female_dress"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                />
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="Ladis Dress Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/laptop_card_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:background="#F1F1EA"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/laptop"
                                />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#fff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="LapTop Destop Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_shose_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:layout_marginTop="3dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/shoe"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="Shoes Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_cap_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/angryimg_3"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="3dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/chats" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="Cap All Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>



                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_recipe_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="3dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/rest" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="4dp"
                                android:text="Recipe Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_t_shairt_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/angryimg_3"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginTop="3dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/dress"/>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="4dp"
                                android:text="T-Shirt,Shirt Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:singleLine="true"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/keybord_mouse_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:background="@drawable/angryimg_3"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="#F4F4EB"
                                android:scaleType="fitXY"
                                android:src="@drawable/ic_cart" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="Mouse keybord Other Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/baby_card_add"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:elevation="20dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="15dp">

                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:background="#DFDFDA"
                                android:src="@drawable/baby"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                />

                            <View
                                android:layout_width="wrap_content"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#fff" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:text="Bady product Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#fff"
                                android:singleLine="true"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/phon_card_add"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:elevation="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:background="#F4F4EB"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/phone"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:singleLine="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="4dp"
                                android:text="Android phon Add"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/oreder_card_show"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:background="#F4F4EB"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/note"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:singleLine="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="4dp"
                                android:text="User All Order Show"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/order_accept_Card"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:elevation="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp">

                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:background="#F4F4EB"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/check"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:singleLine="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="4dp"
                                android:text="Order Accept Notification"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:id="@+id/user_login_card_Id"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:elevation="10dp"
                        app:cardCornerRadius="10dp">
                        <LinearLayout
                            android:background="@drawable/angryimg_3"
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_gravity="center"
                            android:clipToPadding="false"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:background="#F4F4EB"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:scaleType="fitXY"
                                android:src="@drawable/check"
                                />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginTop="6dp"
                                android:background="#ffff" />

                            <TextView
                                android:singleLine="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lines="1"
                                android:padding="4dp"
                                android:text="User Login Information"
                                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                                android:textColor="#ffff"
                                android:textSize="12sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>



</androidx.cardview.widget.CardView>