<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    app:cardElevation="20dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="7dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="7dp"
            android:background="@drawable/search_back"
            android:elevation="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/category_recipe_image"
            android:layout_width="300dp"
            android:scaleType="fitXY"
            android:layout_height="300dp"/>

        <TextView
            android:id="@+id/category_recipe_pd_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_recipe_image"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:text="Item Cord"
            android:textColor="#ECECE4"
            android:textColorHint="#ECECE4"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:textColor="#ECECE4"
            android:textColorHint="#ECECE4"
            android:layout_below="@+id/category_recipe_pd_id"
            android:id="@+id/category_recipe_pd_name"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Item Name"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <TextView
            android:textColor="#ECECE4"
            android:textColorHint="#ECECE4"
            android:layout_below="@+id/category_recipe_pd_name"
            android:id="@+id/category_reicpe_discout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discount"
            android:textStyle="bold"
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/category_price_pd_quan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/category_recipe_pd_id"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="5dp"
            android:text="Item Quantity:"
            android:textColor="#ECECE4"
            android:textColorHint="#ECECE4"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/category_recipe_pd_Price"
            android:textColor="#ECECE4"
            android:textColorHint="#ECECE4"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/category_price_pd_quan"
            android:layout_marginTop="20dp"
            android:layout_marginRight="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price:"
            android:textStyle="bold"
            android:textSize="18sp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>