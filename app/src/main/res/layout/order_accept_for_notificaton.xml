<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="12dp"
    app:cardElevation="15dp"
    android:elevation="15dp"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/angry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:textColor="#EAF1EA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="Order SuccessFull"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/accpt_pd_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Item all Deatils"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accpt_userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_show_pd_all"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="20dp"
                android:text="User Name"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accpt_pd_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_show_pd_userName"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="User Email"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accept_pd_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_show_pd_email"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="User Location"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accept_pd_flat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_show_pd_location"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Flat No"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accept_pd_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_pd_flat"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="City,Twon"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accept_pd_phon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_pd_city"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="phon Number"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/order_pd_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/final_pd_city"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:text="Order Date:"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/accept_totalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:text="Totlal Price"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:textSize="21sp"
                android:textStyle="bold" />



            <TextView
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delive Date:"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:id="@+id/accept_Delivary_current_Date"/>

            <TextView
                android:id="@+id/accept_send_status"
                android:textColor="#EBF1EB"
                android:textColorHint="#E4ECE4"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                 />
        </LinearLayout>

</androidx.cardview.widget.CardView>